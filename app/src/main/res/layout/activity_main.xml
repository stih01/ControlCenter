<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- TextView статуса подключения остается наверху -->
    <TextView
        android:id="@+id/connectionStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статус: Отключено"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/peerStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удаленный клиент: Ожидание..."
        android:textColor="#FFA500"
        android:textSize="14sp"
        android:paddingBottom="8dp"/>

    <!-- Контейнер для отображения либо текста, либо изображения, либо загрузки -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp">

        <!-- Область вывода статуса и сообщений (текстовый лог) -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="?android:attr/textColorPrimary" />
        </ScrollView>

        <!-- Область вывода изображения (PhotoView) -->
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@android:color/transparent" />

        <!-- ProgressBar Горизонтальный (для загрузки изображения) -->
        <ProgressBar
            android:id="@+id/progressBarImage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:padding="0dp"
            android:minHeight="24dp"
            android:maxHeight="24dp"
            android:scaleY="3.0" />

        <!-- ProgressBar Вращающийся (для попыток подключения) -->
        <ProgressBar
            android:id="@+id/progressBarConnect"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- TextView для размера изображения (теперь внутри FrameLayout, снизу) -->
        <TextView
            android:id="@+id/imageSizeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:visibility="gone"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#AA000000"
            android:textColor="#FFFFFF"
            android:padding="4dp"/>

    </FrameLayout>

    <!-- !!! ОБНОВЛЕННЫЙ КОНТЕЙНЕР ДЛЯ КНОПОК КАМЕРЫ !!! -->
    <LinearLayout
        android:id="@+id/cameraButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">
        <!-- Кнопки будут добавлены сюда из MainActivity.java -->
    </LinearLayout>

</LinearLayout>
