<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Цвет кнопок и основных элементов -->
        <item name="colorPrimary">@color/my_app_color</item>
        <!-- Цвет верхней панели (строки состояния) -->
        <item name="colorPrimaryVariant">@color/my_app_color</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!-- Убираем Light из родителя, чтобы получить темную основу -->

        <!-- Определяем пользовательский стиль для самого контейнера меню -->
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>

        <!-- Это опционально: меняет цвет текста по умолчанию, если не задан в макете -->
        <item name="android:textColorPrimary">@color/bottom_sheet_text_color</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <!-- Устанавливает ТЕМНЫЙ цвет фона для самого контейнера меню -->
        <item name="android:background">@color/bottom_sheet_background</item>
    </style>
</resources>